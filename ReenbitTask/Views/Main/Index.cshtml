@model ReenbitTask.Models.SaveModel

<form id="fileForm" enctype="multipart/form-data" asp-action="SaveAndSend" asp-controller="Views">
    <h2 class="text-dark text-center">Save</h2>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <div class="col-4 text-black-50">
            <label asp-for="File"></label>
        </div>
        <div class="col-8">
            <input type="file" accept=".docx" asp-for="File" id="file" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-4 text-black-50">
            <label asp-for="Email"></label>
        </div>
        <div class="col-8">
            <input asp-for="Email" class="form-control" />
            <span id="email" asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-12  d-flex flex-row">
            <button type="button" class="btn btn-primary form-control m-1"
                    onclick="saveObject('fileForm')">
                Save
            </button>
        </div>
    </div>
</form>
